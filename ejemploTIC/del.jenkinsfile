pipeline {
    agent {
        label 'ansible'
    }
    
    stages { 
        stage('Eliminar usuarios y grupos') {
            steps {
                // Ejecuta el playbook de Ansible
                sh 'ansible-playbook -i inventory.yml del-usersgroups.yml'
            }
        }
    }

    post {
        success {
            echo 'El playbook se ejecut√≥ correctamente.'
        }
        failure {
            echo 'Error al ejecutar el playbook.'
        }
    }
}